---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Hey I'm Tarek", description = "Personal website of Tarek Saoud" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <div class="navbar">
        <a href="/" class="logo">Tarek Saoud</a>
        <nav>
          <a href="/">Home</a>
          <a href="/blog">Blog</a>
          <a href="/values">Values</a>
          <a href="/enjoyments">Enjoyments</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <p class="thanks-message">
        <span>Thanks for </span>
        <span class="highlight">coming!</span>
      </p>
      <a href="mailto:gblog@gmail.com" target="_blank" rel="noopener noreferrer">
        gblog@gmail.com
      </a>
      <div class="social-icons">
        <a href="https://twitter.com/heyimtarek" target="_blank" rel="noopener noreferrer">
          <span>Twitter</span>
        </a>
        <a href="https://linkedin.com/in/tarekgsaoud" target="_blank" rel="noopener noreferrer">
          <span>LinkedIn</span>
        </a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --color-text: #333;
    --color-bg: #ffffff;
    --color-accent: #0066cc;
    --color-highlight: #ff6b6b;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: var(--color-text);
    background: var(--color-bg);
    line-height: 1.6;
  }

  .header {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid #eee;
  }

  .navbar {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--color-text);
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  nav a {
    text-decoration: none;
    color: var(--color-text);
    transition: color 0.2s;
  }

  nav a:hover {
    color: var(--color-accent);
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    min-height: calc(100vh - 200px);
  }

  .footer {
    border-top: 1px solid #eee;
    padding: 2rem;
    text-align: center;
    background: #f9f9f9;
  }

  .thanks-message {
    margin-bottom: 0.5rem;
  }

  .highlight {
    color: var(--color-highlight);
    font-weight: 600;
  }

  .footer a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .social-icons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .social-icons a {
    color: var(--color-text);
    transition: color 0.2s;
  }

  .social-icons a:hover {
    color: var(--color-accent);
  }
</style>